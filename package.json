{
  "name": "voice-travel-planner",
  "version": "1.0.0",
  "description": "Voice-first AI travel planning assistant using Google Gemini Multimodal Live API",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build --workspace=server && npm run build --workspace=client",
    "eval:feasibility": "npx tsx evals/feasibility.ts",
    "eval:edit": "npx tsx evals/editCorrectness.ts",
    "eval:grounding": "npx tsx evals/groundingEval.ts"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
